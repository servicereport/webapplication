@model serviceReport.Models.ISO.Dominio

@{
    ViewBag.Title = "Index";
}



<div class="all-title-box">
    <div class="container text-center">
        <h1>@Html.DisplayFor(model => model.Identificador).@Html.DisplayFor(model => model.Consecutivo)<span class="m_1">@Html.DisplayFor(model => model.NombreDominio)</span></h1>
    </div>
</div>

<script>
    var idAnexo = 0;
    function  SetAnexo(id){
        idAnexo = id;
        console.log(id);

        //document.getElementById("btnAdd").setAttribute("href", "~/Grupos/Create?idAnexo=" + id);
        document.getElementById("btnAdd").setAttribute("href", "../../Grupos/Create?idDominio=@Model.Id&idAnexo=" + id);

    }
</script>

<div id="pricing" class="section lb">
    <div class="container">
        <div class="section-title text-center">
            <h3>@Model.Anexos.Count() Anexos registrados</h3>
            <!-- <p class="lead">Get the red carpet treatment <strong>just $39 per month!</strong> It is estimated that 3.5 million established by personal blogs.<br> From each other, we share paid WordPress themes WP Service...</p> -->
        </div><!-- end title -->
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="message-box">
                    <ul class="nav nav-pills nav-stacked" id="myTabs">
                        @foreach (var anexo in Model.Anexos)
    {

                    @*<li class="active"><a href="#tab1" data-toggle="pill">@Html.DisplayFor(model => model.Identificador).@Html.DisplayFor(model => model.Consecutivo).@anexo.Consecutivo @anexo.Titulo</a></li>*@
                        @:<li>
                            @:<a href='#tab_@anexo.Id' data-toggle="pill" onclick="SetAnexo(@anexo.Id)">@Html.DisplayFor(model => model.Identificador).@Html.DisplayFor(model => model.Consecutivo).@anexo.Consecutivo @anexo.Titulo</a>
                            @:<p>
                                @:<a href="../../Anexos/Edit?id=@anexo.Id"><img src="../../content/images/application-edit-icon.png" />editar</a>
                                @:</i>
                                @:
                            @:</p>
                        @:</li>
}
                    </ul>
                </div>
            </div>
        </div>
        <hr class="invis">


        <div class="row">
            <div class="col-md-12">
                <div class="tab-content">

                    <!--inicio del grupo-->
                    @foreach (var anexo in Model.Anexos)
                {
                    @:<div class="tab-pane active fade in" id="tab_@anexo.Id">
                        @:<div class="row text-center">




                        foreach (var grupo in @anexo.Grupos)
                        {
                            @:<div class="col-md-6">
                                @:<div class="pricing-table pricing-table-highlighted">
                                    @:<div class="pricing-table-header grd1">
                                        @:<h2>A.5.1.1 @grupo.NombreGrupo</h2>
                                        @:<h3>@grupo.Preguntas.Count Preguntas</h3>
                                        @:<p>
                                            <a href="~/Grupos/Edit?id=@grupo.Id"><img src="~/content/images/application-edit-icon.png" />editar</a>
                                            @:</i>
                                        @:</p>
                                        @:                                    </div>
                                    @:<div class="pricing-table-space"></div>
                                    @:<div class="pricing-table-features">




                                    foreach (var pregunta in grupo.Preguntas)
                                    {
                                        @:<p><a href="~/Preguntas/Edit?idPregunta=@pregunta.Id"><img src="../../content/images/application-edit-icon.png" /></a> <strong>@pregunta.Descripcion </strong></p>
                                }
                                @:                            </div>
                            @:<div class="pricing-table-sign-up">
                                @:<a href="../../Preguntas/Create?idGrupo=@grupo.Id" data-scroll class="btn btn-light btn-radius btn-brd grd1 effect-1">Agregar Pregunta</a>
                                @:                            </div>
                            @:                        </div>
                        @:                    </div>
            }
            @:        </div>
        @:    </div>
}
                    <!--fin del grupo-->
                </div><!-- end content -->
            </div><!-- end col -->
        </div><!-- end row -->


        <div class="btn-group addGruoup">
            <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Agregar
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="~/Dominios/Create">Dominio</a><br>
                <a class="dropdown-item" href="~/Anexos/Create?idDominio=@Model.Id">Anexo</a><br>
                <a class="dropdown-item" id="btnAdd" href="~/Grupos/Create?idDominio=@Model.Id&idAnexo=">Grupo</a>
            </div>
        </div>

    </div><!-- end container -->
</div><!-- end section -->
